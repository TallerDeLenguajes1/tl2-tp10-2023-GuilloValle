@model Tablero

<form asp-controller="Tablero" asp-action="ModificarTablero">
    <div class="form-group">
        <label asp-for="@Model.Id"></label>
        <input asp-for="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
    </div>
    <button type="submit">Enviar</button>
</form>