@model Tablero

<form asp-controller="Tablero" asp-action="ModificarTablero">
    <div class="form-group">
        <label asp-for="@Model.Id"></label> 
        <input asp-for="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Id_propietario"></label>
        <input asp-for="@Model.Id_propietario" class="form-control" />
    </div>
    <button type="submit">Enviar</button>
</form>