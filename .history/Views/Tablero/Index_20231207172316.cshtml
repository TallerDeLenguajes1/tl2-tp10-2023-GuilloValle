@{
    ViewData["Title"] = "Home Page";
}

@using tl2_tp10_2023_GuilloValle.ViewModels
@model ListarTableroViewModel

<h2>Lista de tableros</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th >Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Id_propietario</th>
            <th>Modificar Tarea</th>
            <th>Eliminar Tarea</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model.ListarTableroVM)
        {
            <tr>
                <td>@tablero.Id_tablero</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                <td>@tablero.Id_usuario_propietario</td>
                <td><a asp-asp-controller ="Tablero" asp-action="ModificarTablero" asp-route-idTablero="@tablero.Id">Modificar</a></td>
                <td><a asp-asp-controller ="Tablero" asp-action="EliminarTablero" asp-route-idTablero="@tablero.Id" onclick="return confirm('¿Estás seguro de eliminar este tablero?')">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>