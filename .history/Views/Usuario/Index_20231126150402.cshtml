@{
    ViewData["Title"] = "Home Page";
}

@using tl2_tp10_2023_GuilloValle.ViewModels
@model ListarUsuariosViewModel

<h2>Lista de usuarios</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th >ID</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Modificar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model.ListarUsariosVM)
        {
            <tr>
                <td>@usuario.Id_usuario</td>
                <td>@usuario.Nombre_de_usuario</td>
                <td>@usuario.RolUsuario</td>
               <td><a asp-asp-controller ="Usuario" asp-action="ModificarUsuario" asp-route-idUsuario="@usuario.Id">Modificar</a></td>
                <td><a asp-asp-controller ="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('¿Estás seguro de eliminar este usuario?')">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>


