@{
    ViewData["Title"] = "Usuario";
}

@using tl2_tp10_2023_GuilloValle.ViewModels
@model CrearUsuarioViewModel


<form asp-controller="Usuario" asp-action="CrearUsuario">
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario">Nombre de usuario</label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password">Contrasenia</label>
        <input asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rol</label>
         <select asp-for="@Model.Rol" class="form-control">
            <option value="Administrador" selected="@Model.Rol == 0">Administrador</option>
            <option value="Operador" selected="@Model.Rol == 1">Operador</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>