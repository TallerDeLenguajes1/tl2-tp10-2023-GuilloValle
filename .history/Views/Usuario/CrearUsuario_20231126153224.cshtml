@{
    ViewData["Title"] = "Usuario";
}


@model Usuario


<form asp-controller="Usuario" asp-action="CrearUsuario">
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario">Nombre de usuario</label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password">Contrasenia</label>
        <input asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rol</label>
         <select asp-for="@Model.Rol">
            <option value="0">Administrador</option>
            <option value="1">Operador</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>