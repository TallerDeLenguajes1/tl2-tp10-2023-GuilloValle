@{
    ViewData["Title"] = "Usuario";
}

@using tl2_tp10_2023_GuilloValle.ViewModels
@model CrearUsuarioViewModel


<form asp-controller="Usuario" asp-action="CrearUsuario">
    <div class="form-group">
        <label asp-for="@Model.Nombre_de_usuario">Nombre de usuario</label>
        <input asp-for="@Model.Nombre_de_usuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Contrasenia">Contrasenia</label>
        <input asp-for="@Model.Contrasenia" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rol</label>
         <select asp-for="@Model.RolUsuario" class="form-control">
            <option value="0" >Administrador</option>
            <option value="1" >Operador</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>