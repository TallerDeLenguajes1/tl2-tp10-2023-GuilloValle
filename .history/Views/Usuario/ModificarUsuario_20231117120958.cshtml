@model Usuario

<form asp-controller="Usuario" asp-action="ModificarUsuario">
    <div class="form-group">
        <label asp-for="@Model.Id">Id del usuario a modificar:</label> 
        <input asp-for="@Model.Id" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" />
    </div>
    <button type="submit">Enviar</button>
</form>