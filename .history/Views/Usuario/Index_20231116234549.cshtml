@{
    ViewData["Title"] = "Home Page";
}


@model List<Usuario>

<h2>Usuario List</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th >ID</th>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.NombreDeUsuario</td>
                <a asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('¿Estás seguro de eliminar este usuario?')">Eliminar</a>
            </tr>
        }
    </tbody>
</table>


