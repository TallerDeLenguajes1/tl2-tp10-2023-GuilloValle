@{
    ViewData["Title"] = "Tarea";
}

@using tl2_tp10_2023_GuilloValle.ViewModels
@model ModificarTareaViewModel

<form asp-controller="Tarea" asp-action="ModificarTarea">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color"></label>
        <input asp-for="@Model.Color" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado"></label>
        <input asp-for="@Model.Estado" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsingnado"></label>
        <input asp-for="@Model.IdUsuarioAsingnado" class="form-control" />
    </div>
    <button type="submit">Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }